<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#220a37" />
            <gradient android:angle="-90" android:startColor="#330f53" android:endColor="#44146f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#4c177d" />
            <solid android:color="#663096"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#551a8b" />
            <gradient android:angle="-90" android:startColor="#08020d" android:endColor="#190729" />
        </shape>
    </item>
</selector>