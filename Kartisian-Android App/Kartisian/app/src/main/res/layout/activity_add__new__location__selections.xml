<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2e0e4b"
    tools:context="com.sjsu.cmpe.kartisian.Add_New_Location_Selections">

    <TextView
        android:text="How would you like to add a location?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="21dp"
        android:textColor="#bba3d0"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="120dp"
        android:text="By Address"
        android:onClick="newAddress"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="#bba3d0"
        />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="280dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="95dp"
        android:text="By Current Location"
        android:onClick="newCurrentLocation"
        android:background="@drawable/mybutton"
        android:textColor="#bba3d0"
        android:padding="10dp"/>

</RelativeLayout>
