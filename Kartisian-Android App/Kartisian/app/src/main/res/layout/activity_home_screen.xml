<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sjsu.cmpe.kartisian.HomeScreen"
    android:background="#2e0e4b">

    <TextView
        android:id="@+id/navigatortext"
        android:text="Where are we going today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textColor="#bba3d0"
        />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placesspinner"
        android:layout_alignTop="@+id/navigatortext"
        android:layout_marginTop="100dp"
        android:prompt="@string/fav_places"
        android:background="#bba3d0"
        android:popupBackground="#ccbadc"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="240dp"
        android:onClick="gotoMaps"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="#bba3d0"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="320dp"
        />
    
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text = "Add new location"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="80dp"
        android:onClick="Addr_Selectors"
        android:background="@drawable/mybutton"
        android:textColor="#bba3d0"
        />

</RelativeLayout>
